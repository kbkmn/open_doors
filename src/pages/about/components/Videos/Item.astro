---
import { type Video } from "../../data"

type Props = Video

const { title, embed } = Astro.props
---

<li
  class="glide__slide w-[calc(100vw_-_2rem)] shrink-0 px-4 md:w-[33rem] md:px-0 select-none"
>
  <div class="bg-white rounded-[1rem] p-6 md:p-8 flex flex-col gap-4 md:gap-6">
    <div
      class="rounded-[0.5rem] overflow-clip"
      set:html={embed}
    />

    <div class="text-[1.125rem] font-bold leading-[1.625rem]">{title}</div>
  </div>
</li>
