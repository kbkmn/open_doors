---
import { cn } from "@/utils/classname"

import Header from "@/components/Header/Header.astro"
import Footer from "@/components/Footer.astro"

const backgroundBase64 =
  "data:image/svg+xml;base64,"
---

<html lang="en">
  <head>
    <link
      rel="preconnect"
      href="https://fonts.googleapis.com"
    />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Raleway:wght@400..700&display=swap"
      rel="stylesheet"
    />

    <title>OpenDoors</title>

    <meta
      name="description"
      content='Russian Scholarship Project Association "Global Universities"'
    />
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1"
    />
  </head>

  <body
    class="bg-[image:var(--background)] bg-cover bg-top font-sans text-gray-dark"
    style={{ ["--background" as any]: `url("${backgroundBase64}")` }}
  >
    <Header />

    <slot />

    <Footer />

    <script
      src="https://cdn.jsdelivr.net/npm/@glidejs/glide"
      is:inline
    ></script>
    <script
      src="/glide.js"
      is:inline
    ></script>
  </body>
</html>
